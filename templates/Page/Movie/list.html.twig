{% extends 'Layout/base.html.twig' %}

{% block body %}
    <a href="{{ path('app_movie_create') }}">
        Create
    </a>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Director</th>
            <th>Release Date</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
             <tr>
                 <td>{{ movie.id }}</td>
                 <td>{{ movie.title }}</td>
                 <td>{{ movie.director }}</td>
                 <td>{{ movie.releaseDate|date('d/m/Y') }}</td>
                 <td>
                     <a href="{{ path('app_movie_show', {'id': movie.id}) }}">
                         Show
                     </a>
                     <a href="{{ path('app_movie_update', {'id': movie.id}) }}">
                         Update
                     </a>
                     <a href="{{ path('app_movie_delete', {'id': movie.id}) }}">
                         Delete
                     </a>
                 </td>
             </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock body %}